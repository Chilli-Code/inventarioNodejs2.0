                    container: document.getElementById('lottie-container'),
                    renderer: 'svg',
                    loop: true,
                    autoplay: true,
                    path: '/Lottie/delete.json'
                  });
                }
              });

              setTimeout(() => {
                location.reload();
              }, 3000);

            } else {
              Swal.fire('Error', 'No se pudo eliminar el recibo', 'error');
            }
          })
          .catch(() => {
            Swal.fire('Error', 'Hubo un problema al eliminar el recibo', 'error');
          });
      }
    });
  }
</script>

