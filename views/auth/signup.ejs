<body>

<div class="violet-storm-wrapper">
   <div class="violet-storm-bg"></div>
<% if (message) { %>
<script>
  Swal.fire({
    icon: 'info',
    title: 'Registro en revisión',
    html: '<p><%= message %></p>',
    confirmButtonText: 'Entendido'
  }).then(() => {
    // Limpiar el mensaje para que no se muestre al recargar
    window.history.replaceState({}, document.title, window.location.pathname);
  });
</script>
<% } %>




  <header id="header">
    <a href="/" class="logo">
      <img src="/img/Logo.webp" alt="Logo" loading="lazy"  draggable="false">
