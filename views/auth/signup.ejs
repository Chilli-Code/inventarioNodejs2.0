      <li><a href="/signin">Inicar</a></li>
      <li><a href="/signup">Registrarse</a></li>
    </ul>
  </header>
  <section class="sectionform">
    <div class="leftPanel">
      <div class="custom-shape-divider-bottom-1629894577">
        <h1 class="welcomeTxt">WELCOME</h1>
        <%- include('./svgSignup') %>
    <link rel="stylesheet" href="/css/Landing.min.css">
      </div>
    </div>
    <div class="rightPanel">
      <form class="loginForm" action="/signup" method="POST">
        <div class="imgcaja">
          <img src="/img/Logo.webp" alt="Logo" loading="lazy" draggable="false">
        </div>
        <h2 class="loginFormH2">Registro</h2>
        <div class="inputInDiv">
          <input class="txtInput" type="text" placeholder="Nombre Completo" name="nombre" id="username">
          <input class="txtInput" type="email" placeholder="Correo Electronico" name="correo" id="correo">
          <input class="txtInput" type="password" name="password" id="password" placeholder="Contraseña">
          <button class="btnLogin" type="submit">registrarse</button>
          </div>
          </form>
          <% if (message) { %>
  <p><%= message %></p>
<% } %>
    </div>
